extends layout


block content
  .container
    h2(align='center') #{title}
    form(method='POST',action='/submit')
      label code
      #form-group
        select(name='code', required)
          option(selected='selected', disabled='disabled') Select downtime code
          |
          option(value='B') B: Beamlines
          |
          option(value='CT') CT: Controls
          |
          option(value='DIA') DIA: diagnostics
          |
          option(value='HE') HE: Human Error
          |
          option(value='I') I: Linac/Injector
          |
          option(value='ID') ID: Insertion Devices
          |
          option(value='INF') INF: Infrastructure
          |
          option(value='MAG') MAG: Magnet (powersupplies)
          |
          option(value='MML') MML: High level software MML
          |
          option(value='MPS') MPS: Machine Protection System
          |
          option(value='NET') NET: Network
          |
          option(value='OI') OI: Orbit Interlock
          |
          option(value='OT') OT: Other
          |
          option(value='PLC') PLC: Programable Logic Controller
          |
          option(value='PSS') PSS: Personel Safety System
          |
          option(value='RF') RF: Radio Frequency
          |          
          option(value='UI') UI: Unscheduled Injection to rings (SPF only)
          |
          option(value='VAC') VAC: Vacuum
          |
          option(value='WAT') WAT: Water
          |
          option(value='WD') WD: Watchdog
        
      label Machine 
      #form-group
        select(name='machine', required)
          option(selected='selected', disabled='disabled') Select machine
          |
          option(value='I') I
          |   
          option(value='R1') R1
          |   
          option(value='R3') R3
      #form-group
        label Reported by:
        input.form-control(name='operator', type='text')
      #form-group
        label Description:
        textarea.form-control(name='description')
      #form-group
        label Date:
        input.form-control(name='date', type='date', value='YYYY-MM-DD',pattern='(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))',required)
      #form-group
        label Time:
        input.form-control(name='time', type='text', value='HH:MM', pattern='([0-1]{1}[0-9]{1}|20|21|22|23):[0-5]{1}[0-9]{1}', required)

      #form-group
        label Duration (hours):
        input.form-control(name='duration', type='number', step=0.25, min=0, required)
      br
      input.btn.btn-primary.btn-lg(type='submit',value='Submit')
