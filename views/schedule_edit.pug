extends layout


block content
  .container
    h2(align='center') #{title}
    form(method='POST',action='/schedule/edit/'+deliveryplan.id)
      #form-group
        label Date:
        input.form-control(name='date', type='date', value=deliveryplan.date, pattern='(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))',required)
      br
      #form-group
        label R1plan (hours):
        input.form-control(name='R1plan', type='number', step=0.01, min=0, max=24, value=deliveryplan.R1plan, required)
      br
      #form-group
        label R3plan (hours):
        input.form-control(name='R3plan', type='number', step=0.01, min=0, max=24, value=deliveryplan.R3plan, required)
        br
      #form-group
        label SPFplan (hours):
        input.form-control(name='SPFplan', type='number', step=0.01, min=0, max=24, value=deliveryplan.SPFplan, required)
      br
      input.btn.btn-primary.btn-lg(type='submit',value='Update')
      a.btn.btn-danger.delete-deliveryplan(href='#',data-id=deliveryplan._id) Delete
  script(src='/bower_components/jquery/dist/jquery.js')
  script(src='/js/del_schedule.js')
