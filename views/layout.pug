doctype html
html

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=yes')
    title DowntimeApp
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css', type='text/css')


  .container
    head
      style.
        ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color:#000000;
        top: 0;
        width: 100%;
        }
        li {
        float: left;
        }
        li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        }
        li a:hover:not(.active) {
        background-color: #66ccff;
        color: white;
        text-decoration: none;
        }
      div
        ul
          li
            a(href='/') Downtime Index
          if user
            li
              a(href='/schedule') Schedule
            li
              a(href='/downtimeevent/submit') Submit downtime
          if user
            li
              a(href='/user/logout') Logout
          else
            //li
            //  a(href='/user/register') Register
            li
              a(href='/user/login') Login

          li
            a(href='/about') About
      div(style='padding:5px;margin-top:0px;background-color:#66ccff;height:0px;')



    .container
      br
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert-danger") #{error.msg}
      block content

      br
      hr
      footer
        p MAX IV operations group
