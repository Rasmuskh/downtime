extends layout


block content
  .container
    h2(align='center') #{title}
    form(method='POST',action='/downtimeevent/archive/'+downtimeevent.id, onsubmit="return confirm('Do you really wish to archive this downtime event?');")
      #form-group
        input(type='checkbox', name='archived', required = true, value=1)
        |  Archive downtime event
        br
        br
        a.btn.btn-primary(href='/') Cancel
        input.btn.btn-danger(type='submit',value='Confirm')
