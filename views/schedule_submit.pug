extends layout


block content
  .container
    h2(align='center') #{title}
    form(method='POST',action='/schedule/submit')
      #form-group
        label Date:
        input.form-control(name='date', type='date', value='YYYY-MM-DD',pattern='(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))',required)
      br
      #form-group
        label R1plan (hours):
        input.form-control(name='R1plan', type='number', step=0.01, min=0, max=24, required)
      br
      #form-group
        label R3plan (hours):
        input.form-control(name='R3plan', type='number', step=0.01, min=0, max=24, required)
        br
      #form-group
        label SPFplan (hours):
        input.form-control(name='SPFplan', type='number', step=0.01, min=0, max=24, required)
      br
      input.btn.btn-primary.btn-lg(type='submit',value='Submit')
